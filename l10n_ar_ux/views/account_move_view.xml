                <field name="l10n_ar_currency_rate" attrs="{'invisible': ['|', '|', '|', ('country_code', '!=', 'AR'),('l10n_ar_currency_rate', '=', False), ('l10n_ar_currency_rate', '=', 0.0), ('other_currency', '=', False)]}"/>
