<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">partner_documents.view_partner_form</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="model">res.partner</field>
            <field type="xml" name="arch">
                <field name="website" position="after">
                    <label for="main_id_number" string="Main Identification"/>
                    <div class="address_format">
                        <field name="main_id_category_id" placeholder="Category" style="width: 45%"/>
                        <field name="main_id_number" placeholder="Number" style="width: 53%"/>
                    </div>
                </field>
            </field>
        </record>

    </data>
</odoo>
