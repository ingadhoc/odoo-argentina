<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="groups_id" eval="[(4, ref('l10n_ar_stock.arba_cot_enabled'))]"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <label for="arba_code"/>
                <div class="oe_inline">
                    <field name="arba_code" class="oe_inline"/>
                     <a target="_blank" href="http://www.arba.gov.ar/Aplicaciones/NomencladorTB/NomencladorTB.asp" class="oe_edit_only oe_inline">Ver Nomenclador</a>
                </div>
            </field>
        </field>
    </record>

</odoo>
