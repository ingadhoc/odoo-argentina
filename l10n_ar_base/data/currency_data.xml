            <field name="rate">1.00</field>
        </record>
        <record id="base.rateUSD" model="res.currency.rate">
            <!-- inverse from 15,2 -->
            <field name="rate">0.065789</field>
        </record>
        <record id="base.rateEUR" model="res.currency.rate">
            <!-- inverse from 17 -->
            <field name="rate">0.058823</field>
        </record>
    </data>
</openerp>
