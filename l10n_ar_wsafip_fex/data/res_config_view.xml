            <field name="inherit_id" ref="l10n_ar_invoice.view_account_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Create new point of sale for AFIP']/.." position="after">
                    <div>
                        <button string="Associate point of sale to AFIP Export electronic invoice"
