<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="afip_ws_currency_rate_wizard_form" model="ir.ui.view">
            <field name="name">AFIP WS currency_rate Wizard form</field>
            <field name="model">afip.ws.currency_rate.wizard</field>
            <field name="arch" type="xml">
                <form string="AFIP WS currency_rate Wizard">
                    <group>
                        <field name="currency_id"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="confirm" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_afip_ws_currency_rate_wizard" model="ir.actions.act_window">
      <field name="name">AFIP WS currency_rate Wizard</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">afip.ws.currency_rate.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
    </data>
</odoo>
