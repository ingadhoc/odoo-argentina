                    <field name="point_of_sale_number" attrs="{'invisible':['|', '|', ('localization', '!=', 'argentina'), ('use_documents', '=', False), ('type', '!=', 'sale')], 'required':[('localization', '=', 'argentina'), ('use_documents', '=', True), ('type', '=', 'sale')]}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
