<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="res_config_settings_view_form">
        <field name="name">res.config.settings.view.form.inherit.l10n_ar_afip_ws</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="invoicing_settings">
                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible':[('localization', '!=', 'argentina')]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="afip_auth_verify_type" string="Verificar validez de factura en AFIP"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Requerir/Permitir validación de facturas de proveedor en AFIP (documentos con CAE, CAI or CAEA)
                        </div>
                        <div class="content-group">
                            <field name="afip_auth_verify_type" />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

    <record model="ir.ui.view" id="res_config_settings_view_form">
        <field name="name">res.config.settings.view.form.inherit.l10n_ar_account</field>
        <field name="inherit_id" ref="l10n_ar_account.res_config_settings_view_form"/>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <div name="argentina_localization">
                <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible':[('localization', '!=', 'argentina')]}">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="l10n_ar_afip_fce_transmission" string="Valor por Defecto Opción de Transmisión FCE MiPyME"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Este es el valor por defecto del tipo de opción de transmisión que será enviada a AFIP cuando valide una factura electrónica MiPyme. Requerimiento RG 4919/2021.
                        </div>
                        <div class="content-group">
                            <field name="l10n_ar_afip_fce_transmission" class="o_light_label" widget="radio"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

