<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="action_aeroo_report_ar_voucher" model="ir.actions.report.xml">
            <field name="name">Argentinian Aeroo Voucher</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">account.voucher</field>
            <field name="report_name">aeroo_report_ar_voucher</field>
            <field name="sequence" eval="7"/>  
            <field name="report_type">aeroo</field>
            <field name="in_format">oo-odt</field>
            <field name="parser_loc">l10n_ar_aeroo_base/parser.py</field>
            <field name="parser_state">loc</field>
            <field name="report_rml">l10n_ar_aeroo_voucher/receipt.odt</field>
            <field name="tml_source">file</field>
            <field name="print_logo">company_logo</field> <!-- Or 'company_logo' or ''  -->
